<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/synchronousPostTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synchronous Post Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/asynchronousPostTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asynchronous Post Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/synchronousGetTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synchronous Get Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/asynchronousGetTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asynchronous Get Test"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>